{
    "name": "Plotune Arduino Extension",
    "id": "plotune_arduino_ext",
    "version": "v0.1.0",
    "description": "Plug-and-play Arduino serial data acquisition and real-time streaming for Plotune Core.",
    "mode": "online",
    "author": "Plotune SDK Team",
    "cmd": [
        "python",
        "-m",
        "plotune_arduino_extension.main"
    ],
    "enabled": true,
    "last_updated": "18.12.2025",
    "git_path": "https://github.com/baksi-org/plotune-arduino-ext",
    "category": "Device",
    "post_url": "http://localhost:8000/api/extension_click",
    "webpage": "https://plotune.net/",
    "file_formats": [],
    "ask_form": true,
    "connection": {
        "ip": "127.0.0.1",
        "port": 0,
        "target": "127.0.0.1",
        "target_port": 8000
    },
    "configuration": {
        "device": "arduino",
        "auto_detect": true,
        "default_baudrate": 115200
    }
}
